<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:layout_gravity="center"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/TxtLogin"
        android:hint="@string/txtView1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ImgView"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:src="@drawable/img20"
        android:height="350dp"
        android:layout_marginVertical="100dp"
        android:contentDescription="@string/Img1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/EdtUser"
        android:inputType="text"
        android:autofillHints="Username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/Edt1"/>

    <EditText
        android:id="@+id/EdtPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginVertical="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints="password"
        android:hint="@string/Edt2"
        android:inputType="text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnSignIn"
        android:background="@color/whitish"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/btn1"
        android:textSize="20sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>